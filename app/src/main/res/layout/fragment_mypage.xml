<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.MylistFragment"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="마이페이지"
        app:titleCentered="true"
        app:menu="@menu/toolbar"
        app:navigationIcon="@drawable/ic_action_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:background="#F5F5F5"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!-- 상단 프로필 영역 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="#FFFFFF"
                android:elevation="4dp"
                android:gravity="center_vertical">

                <!-- 프로필 이미지 -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_profile"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/user_profile"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#C6C3BD"
                    android:layout_centerInParent="true"
                    />

                <!-- 사용자 이름 및 레벨 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/user_nick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" "
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/user_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="레벨 1"
                        android:textSize="16sp"
                        android:textColor="#888888" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_edit_profile"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="프로필 수정"
                    android:background="@drawable/bg_box_gray"
                    android:gravity="center"
                    android:textSize="16sp"
                    />
            </LinearLayout>



            <!-- 적립된 점수 및 설정 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:elevation="4dp">


            <!-- 친구 검색-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="친구, 가족, 연인을 팔로우 하세요."
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >

                    <EditText
                        android:id="@+id/search_edit_text"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:hint="이메일을 입력하세요"
                        android:inputType="textEmailAddress"
                        android:backgroundTint="@color/dark_gray"
                        android:padding="8dp" />

                    <!-- 팔로우 추가 버튼 -->
                    <TextView
                        android:id="@+id/tv_search_follow"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:background="@drawable/bg_box_gray"
                        android:gravity="center"
                        android:text="검색"
                        android:textSize="16sp"
                        android:layout_marginLeft="12dp"/>


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:elevation="4dp">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_point_today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="적립완료 1점"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:id="@+id/tv_point_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="누적  점"
                        android:layout_marginRight="3dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/pointcolor"
                        android:layout_marginLeft="180dp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_point_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="계정소식 알림이 설정되었습니다."
                    android:layout_marginStart="16dp"
                    android:textSize="14sp" />


            </LinearLayout>


            <!-- 레벨 진행 바 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:elevation="4dp">


                <TextView
                    android:id="@+id/tv_level_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="홍길동님 현재 레벨 1입니다."
                    android:textSize="16sp"
                    android:textStyle="bold" />




                <!-- ProgressBar -->
                <com.mackhartley.roundedprogressbar.RoundedProgressBar
                    android:id="@+id/roundedProgressBar"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    app:rpbProgressColor="@color/pointcolor"
                    android:layout_marginTop="12dp"
                    app:rpbBackgroundColor="#FFE0E0E0"
                    app:rpbCornerRadius="12dp"
                    app:rpbProgressTextColor="@color/white"
                    app:rpbTextSize="12sp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_now_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="레벨 1"
                        android:textColor="@color/gray"
                        android:textSize="12sp"
                        android:layout_gravity="start"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:id="@+id/tv_next_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="레벨 2"
                        android:textColor="@color/gray"
                        android:textSize="12sp"
                        android:layout_gravity="end"
                        />


                </LinearLayout>



            </LinearLayout>

            <!-- 추천 장소 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:paddingTop="8dp"
                android:layout_marginTop="8dp"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/ic_bookmark_filled"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="스크랩 목록"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    />


            </LinearLayout>




        </LinearLayout>
    </ScrollView>


</LinearLayout>



