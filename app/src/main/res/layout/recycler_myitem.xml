<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_margin="8dp">


    <ImageView
        android:id="@+id/iv"
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:src="@drawable/dummy_1"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:background="@drawable/bg_box2"
        android:layout_margin="4dp"
        />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="새벽집 청담점"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="140dp"
        android:maxLines="1"
        android:ellipsize="end"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@id/tv_title"
        android:background="@drawable/baseline_star_24"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tv_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5.0"
        android:textSize="18sp"
        android:textColor="#FF0000"
        android:layout_below="@id/tv_title"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tv_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="고기가 맛있다. 정말 맛있다. 복음밥도 맛있다. 고기가 맛있다. 정말 맛있다. 복음밥도 맛있다.고기가 맛있다. 정말 맛있다. 복음밥도 맛있다 "
        android:layout_below="@id/tv_rating"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="8dp"
        android:maxLines="3"
        android:ellipsize="end"/>




</RelativeLayout>